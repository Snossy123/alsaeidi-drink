{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "jsx": "react-jsx",               // ðŸ‘ˆ this is required for React 17+
    "lib": ["DOM", "ESNext"],         // ðŸ‘ˆ enables DOM types like <div>, document, etc.
    "types": ["react", "react-dom"],  // ðŸ‘ˆ ensures JSX types are available
    "baseUrl": ".",
